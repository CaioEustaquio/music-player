{
  "$schema": "https://www.schemastore.org/tsconfig",
  "_version": "24.0.0",
  "compilerOptions": {
    "allowJs": true,
    "lib": [
      "DOM",
      "es2024",
      "DOM.Iterable",
      "ESNext.Array",
      "ESNext.Collection",
      "ESNext.Iterator",
      "ESNext.Promise",
    ],
    "module": "esnext",
    "target": "es2024",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "bundler",
    "paths": {
      "@controllers/*": [
        "src/controllers/*"
      ],
      "@appTypes/*": [
        "src/types/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@data/*": [
        "src/data/*"
      ]
    }
  },
  "include": [
    "src"
  ],
}